<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".games.AreaGame"
              android:background="@android:color/transparent" android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="fill_parent"
                                                       android:layout_height="match_parent"
                                                       android:layout_weight="1">
        <TextView
                android:text="Area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/explanation1"
                android:visibility="visible"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:rotation="180"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="154dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="29dp"
                android:layout_marginEnd="155dp" app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="text"
                  android:id="@+id/area_txt"
                  android:gravity="center"
                  android:textSize="22sp"
                  android:rotation="180"
                  app:layout_constraintTop_toTopOf="@+id/explanation1"
                  app:layout_constraintBottom_toBottomOf="@+id/explanation1"
                  app:layout_constraintStart_toStartOf="@+id/explanation1"
                  app:layout_constraintEnd_toEndOf="@+id/explanation1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="fill_parent"
                                                       android:layout_height="match_parent"
                                                       android:layout_weight="1">
        <TextView
                android:text="Area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/explanation2"
                android:visibility="visible"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="100dp"
                android:layout_marginEnd="155dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="154dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="30dp"
                  android:text="text"
                  android:id="@+id/area_txt2"
                  android:gravity="center"
                  android:textSize="22sp"
                  app:layout_constraintEnd_toEndOf="@+id/explanation2"
                  app:layout_constraintStart_toStartOf="@+id/explanation2"
                  app:layout_constraintTop_toTopOf="@+id/explanation2"
                  app:layout_constraintBottom_toBottomOf="@+id/explanation2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>