<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_activity"
        android:background="@drawable/homepage"
        tools:context=".MainActivity">


    <Button
            android:layout_width="181dp"
            android:layout_height="178dp"
            android:id="@+id/play_button"
            android:background="@drawable/play_btn_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/about_me_button"
            android:background="@drawable/about_me_button"
            app:layout_constraintTop_toBottomOf="@+id/play_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.769"
            app:layout_constraintHorizontal_bias="0.349"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/setting_button"
            android:background="@drawable/setting_button"
            app:layout_constraintTop_toBottomOf="@+id/play_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.769"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.638"
    />

    <RadioGroup android:layout_width="252dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/radio_group"
                android:background="@drawable/rectangle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.807"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintTop_toTopOf="parent">

        <RadioButton android:layout_height="40dp"
                     android:layout_width="40dp"
                     android:layout_marginStart="50dp"
                     android:text="2"
                     android:id="@+id/twoplayers"
                     android:button="@android:color/transparent"
                     android:textColor="@drawable/player_text_color"
                     android:background="@drawable/player_selector"
                     android:fontFamily="@font/lightersdemo"
                     android:textAlignment="center"
                     android:textSize="30dp" tools:ignore="SpUsage"/>

        <RadioButton android:layout_height="40dp"
                     android:layout_width="40dp"
                     android:id="@+id/threeplayers"
                     android:layout_marginStart="53dp"
                     android:text="3"
                     android:textSize="30dp"
                     android:button="@android:color/transparent"
                     android:textColor="@drawable/player_text_color"
                     android:background="@drawable/player_selector"
                     android:fontFamily="@font/lightersdemo"
                     android:layout_marginEnd="15dp"
                     android:textAlignment="center" tools:ignore="SpUsage"/>
        <RadioButton android:layout_height="40dp"
                     android:layout_width="40dp"
                     android:layout_marginStart="30dp"
                     android:text="4"
                     android:button="@android:color/transparent"
                     android:textColor="@drawable/player_text_color"
                     android:background="@drawable/player_selector"
                     android:id="@+id/fourplayers"
                     android:layout_marginEnd="48dp"
                     android:textSize="30dp"
                     android:fontFamily="@font/lightersdemo"
                     android:textAlignment="center" tools:ignore="SpUsage"/>
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>