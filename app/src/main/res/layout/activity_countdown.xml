<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Countdown" android:background="@drawable/countdown">

    <TextView android:layout_width="80dp"
              android:layout_height="90dp"
              android:id="@+id/countdown_txt"
              android:textSize="90sp"
              android:textColor="@color/white"
              android:fontFamily="@font/lightersdemo"
              android:text="@string/countdown_txt"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintVertical_bias="0.759"/>


    <TextView android:layout_width="80dp"
              android:layout_height="90dp"
              android:id="@+id/countdown_txt2"
              android:textSize="90sp"
              android:textColor="@color/white"
              android:fontFamily="@font/lightersdemo"
              android:text="@string/countdown_txt"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:rotation="180" app:layout_constraintVertical_bias="0.25"/>
</androidx.constraintlayout.widget.ConstraintLayout>