<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_tem_name"
            android:textSize="25sp"
            android:fontFamily="@font/lightersdemo"
            android:textColor="@color/white"
            android:background="@drawable/drop_down_background"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="31dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="inherit"
            android:paddingStart="35dp"
            android:paddingVertical="25dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.499">
    </TextView>
    <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch2"
            android:thumb="@drawable/thumb"
            app:track="@drawable/track"
            app:showText="false"
            app:layout_constraintTop_toTopOf="@+id/list_tem_name"
            app:layout_constraintBottom_toBottomOf="@+id/list_tem_name"
            app:layout_constraintStart_toStartOf="@+id/list_tem_name"
            app:layout_constraintEnd_toEndOf="@+id/list_tem_name"
            app:layout_constraintHorizontal_bias="0.879"/>

</androidx.constraintlayout.widget.ConstraintLayout>