<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/setting_activity"
        android:background="@drawable/background_settings">
    <Button
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/back_to_homepage"
            android:background="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintVertical_bias="0.023"/>
    <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:thumb="@drawable/thumb"
            app:track="@drawable/track"
            app:showText="false"
            app:layout_constraintEnd_toEndOf="@+id/sound_text"
            app:layout_constraintStart_toStartOf="@+id/sound_text"
            app:layout_constraintTop_toTopOf="@+id/sound_text"
            app:layout_constraintHorizontal_bias="0.858"
            app:layout_constraintBottom_toBottomOf="@+id/sound_text"
            app:layout_constraintVertical_bias="0.531"/>
    <TextView android:layout_width="350dp"
              android:layout_height="80dp"
              android:background="@drawable/sound_button"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.491"
              app:layout_constraintVertical_bias="0.124"
              android:id="@+id/sound_text"/>
    <TextView android:layout_width="350dp"
              android:layout_height="80dp"
              android:background="@drawable/game_selection_text"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.491"
              app:layout_constraintVertical_bias="0.247"
              android:id="@+id/game_selection_text"/>

    <Spinner
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/drop_dwon_background"
            android:id="@+id/difficulty"
            app:layout_constraintTop_toBottomOf="@+id/game_selection_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="409dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:layout_width="287dp"
            android:layout_height="56dp"
            android:id="@+id/games"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="335dp"
            app:layout_constraintTop_toBottomOf="@+id/sound_text" app:layout_constraintVertical_bias="0.072"/>


</androidx.constraintlayout.widget.ConstraintLayout>